<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Slug</th>
    <th>Description</th>
    <th>Content</th>
    <th>Layout</th>
    <th>Url</th>
    <th>Views</th>
    <th>Published</th>
    <th>Published At<th/>
    <th>Parent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.slug %></td>
    <td><%= page.description %></td>
    <td><%= page.content %></td>
    <td><%= page.layout %></td>
    <td><%= page.url %></td>
    <td><%= page.views %></td>
    <td><%= page.published %></td>
    <td><%= page.published_at %></td>
    <td><%= page.page_id %></td>
    <td><%= page.active %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

